
@attribute [Route(Menu.Table)]

<STable Items="@GetItemsAsync" ValueField="u => u.Id"
        Height="@("500px")">
    <SVisualizeItems/>
    <SSciTableDataColumn Caption="@nameof(ListItem.Name)"
                         ValueField="@(item => item.Name)"/>
    <SSciTableDataColumn Caption="@nameof(ListItem.PhoneNumber)" 
                         ValueField="@(item => item.PhoneNumber)"/>
    <SSciTableDataColumn Caption="@nameof(ListItem.Age)" 
                         ValueField="@(item => item.Age)"/>
    <SSciTableDataColumn Caption="@nameof(ListItem.BirthDate)"
                         ValueField="@(item => item.BirthDate)"
                         Format="yyyy MM dd hh mm ss"/>
</STable>

@code {

    protected Task<DataResult<ListItem>> GetItemsAsync(DataRequest request)
    {
        return Task.FromResult(DataResult.Create(ListItem.Generate(request.PageSize), 200));
    }
}