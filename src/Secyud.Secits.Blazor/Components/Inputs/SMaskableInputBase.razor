@namespace Secyud.Secits.Blazor.Components
@inherits SInputBase<TValue>
@typeparam TValue

@{
    base.BuildRenderTree(__builder);
}

@code
{
    protected override RenderFragment GenerateContent() => GenerateDefaultContent();

    protected override RenderFragment GenerateChildContent() => __builder =>
    {
        <input value="@_currentString" @attributes="Attributes"
               readonly="@(Readonly ? "readonly" : null)"
               disabled="@(Disabled ? "disabled" : null)"
               @oninput="OnInput" @onchange="OnChange"/>
        @GenerateClearButton()
    };
}
