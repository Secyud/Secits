@namespace Secyud.Secits.Blazor
@inherits SBasicComp
@typeparam TValue

@this.GenerateSettingContent()

@GenerateChildContent();

@code
{
    protected override RenderFragment GenerateChildContent() => __builder => { @GenerateInputField() };

    protected virtual RenderFragment GenerateInputField() => __builder =>
    {
        <input value="@Value"
               type="@InputType"
               class="@GetClass()"
               style="@GetStyle()"
               readonly="@(Readonly ? "readonly" : null)"
               disabled="@(Disabled ? "disabled" : null)"
               @attributes="Attributes"
               @oninput="OnInput"
               @onchange="OnChange"
        />
    };
}
