@namespace Secyud.Secits.Blazor.Components
@inherits ScContainerBase
@typeparam TValue

@GenerateSettingContent()

@{
    base.BuildRenderTree(__builder);
}

@code
{

    protected virtual RenderFragment GenerateSettingContent() =>
        GenerateSettingContent<SInputBase<TValue>>();

    protected override RenderFragment GenerateContent() => GenerateChildContent();

    protected override RenderFragment GenerateChildContent() => __builder =>
    {
        <input value="@Value" class="@GetClass()" style="@GetStyle()"
               readonly="@(Readonly ? "readonly" : null)"
               disabled="@(Disabled ? "disabled" : null)"
               @oninput="OnInput" @onchange="@OnChange"
               @attributes="Attributes"
        />
    };

    protected virtual RenderFragment GenerateClearButton() => __builder =>
    {
        if (ShowClearButton)
        {
            <CloseButton Click="ClearValue"/>
        }
    };
}
