@namespace Secyud.Secits.Blazor.Components
@inherits STimePickerBase

@{
    base.BuildRenderTree(__builder);
}

@code
{
    protected override RenderFragment GenerateChildContent() => __builder =>
    {
        <SIntegerSlider Disabled="@Pression.Disable(DateTimePrecisionKind.Hour)"
                        Cycle Format="00" DelayInterval="0" Max="23" @bind-Value="Hour"/>
        <SIntegerSlider Disabled="@Pression.Disable(DateTimePrecisionKind.Minute)"
                        Cycle Format="00" DelayInterval="0" Max="59" @bind-Value="Minute"/>
        <SIntegerSlider Disabled="@Pression.Disable(DateTimePrecisionKind.Second)"
                        Cycle Format="00" DelayInterval="0" Max="59" @bind-Value="Second"/>
    };
}
