@namespace Secyud.Secits.Blazor.Components
@inherits STimePickerBase

@{
    base.BuildRenderTree(__builder);
}

@code
{
    protected override RenderFragment GenerateChildContent() => __builder =>
    {
        <SInput Disabled="@Pression.Disable(DateTimePrecisionKind.Hour)" @bind-Value="Hour">
            <SIntegerSliderSlot Cycle Format="00" Max="23"/>
        </SInput>
        <SInput Disabled="@Pression.Disable(DateTimePrecisionKind.Minute)" @bind-Value="Minute">
            <SIntegerSliderSlot Cycle Format="00" Max="59"/>
        </SInput>
        <SInput Disabled="@Pression.Disable(DateTimePrecisionKind.Second)" @bind-Value="Second">
            <SIntegerSliderSlot Cycle Format="00" Max="59"/>
        </SInput>
    };
}
