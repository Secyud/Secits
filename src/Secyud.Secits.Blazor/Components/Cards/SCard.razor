@namespace Secyud.Secits.Blazor
@inherits SContainerComp

@{
    base.BuildRenderTree(__builder);
}

@code
{
    protected override RenderFragment GenerateChildContent() => __builder =>
    {
        if (Header is not null)
        {
            <SCardHeader>
                @Header
            </SCardHeader>
        }

        if (Body is not null)
        {
            <SCardBody>
                @Body
            </SCardBody>
        }

        if (ChildContent is not null)
        {
            @ChildContent
        }
    };
}
