@namespace Secyud.Secits.Blazor.Components
@inherits ScContainerBase

@{
    base.BuildRenderTree(__builder);
}

@code
{
    protected override RenderFragment GenerateChildContent() => __builder =>
    {
        @GenerateTitle()
        @GenerateText()
    };

    private RenderFragment? GenerateTitle() => string.IsNullOrEmpty(Title)
        ? null
        : @<SCardHeader>@Title</SCardHeader>;

    private RenderFragment? GenerateText() => string.IsNullOrEmpty(Text)
        ? ChildContent
        : @<SCardBody>@Text</SCardBody>;
}
