@namespace Secyud.Secits.Blazor.Components
@inherits ScContainerBase

@{
    base.BuildRenderTree(__builder);
}

@code
{
    protected override RenderFragment GenerateChildContent() => __builder =>
    {
        @GenerateTitle()
        @GenerateText()
    };

    private RenderFragment GenerateTitle() => __builder =>
    {
        @if (!string.IsNullOrEmpty(Title))
        {
            <SCardHeader>@Title</SCardHeader>
        }
    };

    private RenderFragment GenerateText() => __builder =>
    {
        if (!string.IsNullOrEmpty(Text))
        {
            <SCardBody>@Text</SCardBody>
        }
        else
        {
            @ChildContent
        }
    };
}
