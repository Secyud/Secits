@namespace Secyud.Secits.Blazor.Components
@inherits ScContainerBase

@code
{
    protected override RenderFragment GenerateContent() => __builder =>
    {
        @GenerateSettingContent()
        @base.GenerateContent()
    };

    private RenderFragment GenerateSettingContent() => builder =>
    {
        <CascadingValue TValue="ScSettingMaster" Value="_settingMaster" IsFixed>
            @GeneratePresetSetting()
            @ChildContent
        </CascadingValue>
    };

    protected override RenderFragment? GenerateChildContent() => null;

    protected virtual RenderFragment? GeneratePresetSetting() => null;
}
